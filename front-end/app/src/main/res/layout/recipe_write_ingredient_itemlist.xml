<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <EditText
        android:id="@+id/editText_recipe_write_ingredient_itemlist_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="재료를 입력해주세요"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editText_recipe_write_ingredient_itemlist_02"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/textView_recipe_write_ingredient_itemlist_02"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textView_recipe_write_ingredient_itemlist_01"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_recipe_write_ingredient_itemlist_02"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editText_recipe_write_ingredient_itemlist_02"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_recipe_write_ingredient_itemlist_01"
        android:hint="개수"
        android:background="@drawable/edittext_count_background"
        android:paddingStart="8dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>