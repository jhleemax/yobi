<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageView_main_itemlist"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/textView_main_itemlist_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소고기 된장찌개"
        app:layout_constraintTop_toBottomOf="@id/imageView_main_itemlist"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/textView_main_itemlist_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2인분"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_main_itemlist_01"/>
    <View
        android:id="@+id/view_main_itemlist_01"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/textView_main_itemlist_02"
        app:layout_constraintTop_toTopOf="@id/textView_main_itemlist_02"
        app:layout_constraintBottom_toBottomOf="@id/textView_main_itemlist_02"/>
    <TextView
        android:id="@+id/textView_main_itemlist_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15분 이내"
        app:layout_constraintStart_toEndOf="@id/view_main_itemlist_01"
        app:layout_constraintTop_toTopOf="@id/view_main_itemlist_01"
        app:layout_constraintBottom_toBottomOf="@id/view_main_itemlist_01"/>
    <View
        android:id="@+id/view_main_itemlist_02"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/textView_main_itemlist_03"
        app:layout_constraintBottom_toBottomOf="@id/textView_main_itemlist_03"
        app:layout_constraintTop_toTopOf="@id/textView_main_itemlist_03"/>
    <TextView
        android:id="@+id/textView_main_itemlist_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중급"
        app:layout_constraintTop_toTopOf="@id/view_main_itemlist_02"
        app:layout_constraintStart_toEndOf="@id/view_main_itemlist_02"
        app:layout_constraintBottom_toBottomOf="@id/view_main_itemlist_02"/>
</androidx.constraintlayout.widget.ConstraintLayout>