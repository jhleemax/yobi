<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_search_result">
    <LinearLayout
        android:id="@+id/linearLayout_search_result_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="backspace"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="레시피 검색"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_search_result_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_search_result_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter"/>
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearLayout_search_result_filter_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쉬움"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_search_result_filter_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2인분"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/textView_search_result_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▼"/>
        <TextView
            android:id="@+id/textView_search_result_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정확도순"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_search_result_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView_search_result_list_01"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/textView_search_result_list_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OOO님의 충격의 김치볶음밥 레시피를 해보았습니다."
                    app:layout_constraintStart_toEndOf="@id/imageView_search_result_list_01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <TextView
                    android:id="@+id/textView_search_result_list_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.4천 조회수"
                    app:layout_constraintTop_toBottomOf="@id/textView_search_result_list_01"
                    app:layout_constraintStart_toEndOf="@id/imageView_search_result_list_01"/>
                <ImageView
                    android:id="@+id/imageView_search_result_list_profile_10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView_search_result_list_01"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밤하늘"
                    app:layout_constraintStart_toEndOf="@id/imageView_search_result_list_profile_10"
                    app:layout_constraintTop_toTopOf="@id/imageView_search_result_list_profile_10"
                    app:layout_constraintBottom_toBottomOf="@id/imageView_search_result_list_profile_10"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_search_result_list_like_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/textView_search_result_list_like_01"
                    app:layout_constraintTop_toTopOf="@id/textView_search_result_list_like_01"
                    app:layout_constraintBottom_toBottomOf="@id/textView_search_result_list_like_01"
                    android:text="like"/>
                <TextView
                    android:id="@+id/textView_search_result_list_like_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>